{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "/opt/*": ["./packages/*"],
      "@red-comet/*": ["./packages/*"]
    },
  },
  "exclude": [
    ".build",
    "dist",
    "node_modules",
    "templates"
  ],
}
